# Function to remove an item from a list
def remove_from_list():
    items = ['Apple', 'Banana', 'Cherry', 'Data']
    print("Current items:", items)

    remove_item = input("Enter the item you want to remove: ")

    if remove_item in items:
        items.remove(remove_item)
        print(f"'{remove_item}' has been removed successfully.")
    else:
        print(f"'{remove_item}' was not found in the list.")

    print("Updated list:", items)



remove_from_list()


# Function to calculate factorial of a positive number
def calculate_factorial():
    number = int(input("Enter a positive number: "))
    result = 1

    for n in range(1, number + 1):
        result *= n

    print(f"The factorial of {number} is: {result}")



calculate_factorial()
